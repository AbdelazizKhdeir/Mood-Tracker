<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Add Mood | Mood Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      :root {
        --primary: #4a90e2;
        --dark-bg: #121212;
        --light-bg: #f0f2f5;
        --text-light: #ffffff;
        --text-dark: #121212;
        --btn-dark: #444;
        --btn-light: #ddd;
        --input-bg-light: #ffffff;
        --input-bg-dark: #1e1e1e;
        --transition: 0.3s ease;
      }

      body {
        font-family: "Segoe UI", sans-serif;
        background-color: var(--light-bg);
        color: var(--text-dark);
        padding: 2rem;
        text-align: center;
        transition: background var(--transition), color var(--transition);
      }

      body.dark-mode {
        background-color: var(--dark-bg);
        color: var(--text-light);
      }

      h2 {
        margin-bottom: 0.5rem;
      }

      form {
        margin-top: 2rem;
      }

      input[type="text"] {
        padding: 0.75rem;
        width: 300px;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 6px;
        background-color: var(--input-bg-light);
        color: var(--text-dark);
        transition: background var(--transition), color var(--transition),
          border-color var(--transition);
      }

      body.dark-mode input[type="text"] {
        background-color: var(--input-bg-dark);
        color: var(--text-light);
        border: 1px solid #555;
      }

      button {
        margin-left: 1rem;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        background-color: var(--primary);
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color var(--transition);
      }

      button:hover {
        background-color: #357ab8;
      }

      .error {
        margin-top: 1rem;
        color: #e74c3c;
      }

      .back-link,
      .home-link {
        display: inline-block;
        margin-top: 2rem;
        margin-right: 1rem;
        padding: 10px 20px;
        background-color: var(--primary);
        color: var(--text-light);
        text-decoration: none;
        border-radius: 5px;
        transition: background-color var(--transition), color var(--transition);
      }

      .back-link:hover,
      .home-link:hover {
        background-color: #357ab8;
      }

      body.dark-mode .back-link,
      body.dark-mode .home-link {
        background-color: #4a90e2;
        color: var(--text-light);
      }

      /* Theme toggle button */
      .theme-toggle-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        background-color: var(--btn-dark);
        color: white;
        transition: background var(--transition), color var(--transition);
        z-index: 1000;
      }

      body.dark-mode .theme-toggle-btn {
        background-color: var(--btn-light);
        color: black;
      }
    </style>
  </head>

  <body>
    <!-- Toggle Button -->
    <button id="themeToggle" class="theme-toggle-btn">ðŸŒ™ Dark Mode</button>

    <h2>Hello, <%= username %> ðŸ‘‹</h2>
    <p>How are you feeling today?</p>

    <% if (error) { %>
    <div class="error"><%= error %></div>
    <% } %>

    <form action="/daily" method="POST">
      <input
        type="text"
        name="mood"
        placeholder="e.g. Happy, Tired, Stressed"
        required
      />
      <button type="submit">Save Mood</button>
    </form>

    
    <a class="home-link" href="/home">â¬… Home Dashboard</a>

    <script>
      const toggleButton = document.getElementById("themeToggle");

      // Apply saved theme on page load
      const savedTheme = localStorage.getItem("theme");
      if (savedTheme === "dark") {
        document.body.classList.add("dark-mode");
        toggleButton.textContent = "ðŸŒž Light Mode";
      }

      // Toggle theme and save preference
      toggleButton.addEventListener("click", () => {
        document.body.classList.toggle("dark-mode");
        const isDark = document.body.classList.contains("dark-mode");
        toggleButton.textContent = isDark ? "ðŸŒž Light Mode" : "ðŸŒ™ Dark Mode";
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });
    </script>
  </body>
</html>
