<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Mood | Mood Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      crossorigin="anonymous"
    />
    <style>
      :root {
        --dark-bg: #121212;
        --light-bg: #ffffff;
        --text-dark: #121212;
        --text-light: #ffffff;
        --blue: #4a90e2;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        margin: 0;
        font-family: "Segoe UI", Tahoma, sans-serif;
        background: var(--light-bg);
        color: var(--text-dark);
        transition: background 0.3s, color 0.3s;
      }

      body.dark-mode {
        background-color: var(--dark-bg);
        color: var(--text-light);
      }

      .layout {
        display: flex;
        min-height: 100vh;
      }

      .sidebar {
        width: 220px;
        background-color: #222;
        color: var(--text-light);
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .sidebar .logo {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--blue);
        margin-bottom: 1rem;
      }

      .nav-link {
        display: flex;
        align-items: center;
        padding: 0.6rem 0.8rem;
        border-radius: 8px;
        color: var(--text-light);
        text-decoration: none;
        gap: 10px;
        transition: background 0.3s;
      }

      .nav-link:hover,
      .nav-link.active {
        background-color: #333;
      }

      .main {
        flex: 1;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      h1 {
        margin-bottom: 2rem;
        font-size: 2rem;
        color: var(--blue);
      }

      form {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
      }

      body.dark-mode form {
        background-color: #1f1f1f;
      }

      label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--text-dark);
      }

      body.dark-mode label {
        color: var(--text-light);
      }

      select,
      textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 1.5rem;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 1rem;
        font-family: inherit;
        resize: vertical;
      }

      body.dark-mode select,
      body.dark-mode textarea {
        background-color: #2a2a2a;
        border-color: #555;
        color: var(--text-light);
      }

      button {
        background-color: var(--blue);
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
      }

      button:hover {
        background-color: #256ac0;
      }

      .btn-back {
        margin-top: 1rem;
        display: inline-block;
        color: var(--blue);
        text-decoration: underline;
        cursor: pointer;
      }

      .btn-back:hover {
        color: #256ac0;
      }

      @media (max-width: 768px) {
        .layout {
          flex-direction: column;
        }
        .sidebar {
          width: 100%;
          flex-direction: row;
          justify-content: space-around;
        }
        .main {
          padding: 1rem;
        }
        form {
          max-width: 100%;
          padding: 1rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="layout">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="logo">MoodTracker</div>
        <a href="/home" class="nav-link"><i class="fas fa-home"></i> Home</a>
        <a href="/daily" class="nav-link"><i class="fas fa-plus-circle"></i> Add Mood</a>
        <a href="/calendar" class="nav-link"><i class="fas fa-calendar-alt"></i> Calendar</a>
        <a href="/trend" class="nav-link"><i class="fas fa-chart-line"></i> Trends</a>
        <a href="/settings" class="nav-link"><i class="fas fa-cog"></i> Settings</a>
      </aside>

      <!-- Main Content -->
      <main class="main">
        <h1>Edit Mood</h1>

     <form action="/moods/update/<%= mood._id %>" method="POST"  autocomplete="off">
          <label for="moodLevel">Mood</label>
          <select id="moodLevel" name="moodLevel"  value="<%= mood.moodLevel %>" required >
            <option value="" disabled>Select your mood</option>
  <option value="üòä Happy" <%= mood.mood === "üòä Happy" ? "selected" : "" %>>üòä Happy</option>
  <option value="üò¢ Sad" <%= mood.mood === "üò¢ Sad" ? "selected" : "" %>>üò¢ Sad</option>
  <option value="üò† Angry" <%= mood.mood === "üò† Angry" ? "selected" : "" %>>üò† Angry</option>
  <option value="üò∞ Stressed" <%= mood.mood === "üò∞ Stressed" ? "selected" : "" %>>üò∞ Stressed</option>
  <option value="üò¥ Tired" <%= mood.mood === "üò¥ Tired" ? "selected" : "" %>>üò¥ Tired</option>
  <option value="üòê Neutral" <%= mood.mood === "üòê Neutral" ? "selected" : "" %>>üòê Neutral</option>
            <!-- Add other moods as you like -->
          </select>

          <label for="note">Note</label>
          <textarea
            id="note"
            name="note"
            rows="4"
            placeholder="Add your notes here..."
            required
          ><%= mood.note %></textarea>

          <button type="submit">Save Changes</button>
        </form>

        <a href="/calendar" class="btn-back">&larr; Back to Calendar</a>
      </main>
    </div>

    <script>
      // Theme toggle script (optional, same as calendar page)
      const toggleButton = document.createElement("button");
      toggleButton.id = "themeToggle";
      toggleButton.className = "theme-toggle-btn";
      toggleButton.textContent = "üåô Dark Mode";

      document.querySelector(".main").insertBefore(toggleButton, document.querySelector("h1"));

      const savedTheme = localStorage.getItem("theme");
      if (savedTheme === "dark") {
        document.body.classList.add("dark-mode");
        toggleButton.textContent = "üåû Light Mode";
      }
      toggleButton.addEventListener("click", () => {
        document.body.classList.toggle("dark-mode");
        const isDark = document.body.classList.contains("dark-mode");
        toggleButton.textContent = isDark ? "üåû Light Mode" : "üåô Dark Mode";
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });
    </script>
  </body>
</html>
